# Environment Variables for Thai Business Search System
# ตัวแปรสภาพแวดล้อมสำหรับระบบค้นหาธุรกิจไทย
# Copy this file to .env and update the values

# API Configuration
SERPAPI_KEY=your_serpapi_key_here

# Application Settings
APP_TITLE=ระบบค้นหาธุรกิจไทย
APP_DESCRIPTION=ระบบค้นหาข้อมูลธุรกิจในประเทศไทย

# Server Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# UI Configuration
DEFAULT_PROVINCE=ทั้งหมด
DEFAULT_DISTRICT=ทั้งหมด
DEFAULT_BUSINESS_TYPE=ทั้งหมด

# Search Configuration
MAX_SEARCH_RESULTS=100
SEARCH_TIMEOUT=30

# Debug Mode
DEBUG_MODE=False
LOG_LEVEL=INFO

